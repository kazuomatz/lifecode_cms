<%- content_for :title do %>
  記事管理
<%- end %>
<% content_for :breadcrumb do %>
  <% if @site.present? %>
    <% items = [
        {url: '/admin', title: 'ホーム'},
        {title: "店舗一覧", url: admin_shops_path},
        {title: "記事一覧 #{@site.name} (#{@company.name})", url: admin_articles_path(id: @site.id)},
        {title: "記事更新"}
    ] %>
  <% else %>
    <%- items = [
        {url: '/admin', title: 'ホーム'},
        {title: "記事一覧", url: admin_articles_path(admin: true)},
        {title: "記事更新"}
    ] %>
  <%- end %>
  <%= render partial: 'layouts/breadcrumb', locals: {items: items} %>
<% end %>

<div class="container base">
  <div>
    <div class="row">
      <div class="col-sm-12 ">
        <h1 class="func-title">記事更新</h1>
        <%= render partial: 'form', locals: {site: @site, article: @article} %>
      </div>
    </div>
  </div>
</div>
