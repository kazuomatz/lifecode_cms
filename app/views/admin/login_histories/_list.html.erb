<table class="table list-table">
  <thead>
  <tr>
    <th width="80">状態</th>
    <th>アカウント</th>
    <th>ログイン日時</th>
    <th>IPアドレス</th>
  </tr>

  </thead>
  <tbody>
  <%- login_histories.each do |login_history| -%>
    <tr>
      <td class="center">
        <%- if login_history.status == 1 %>
          <h3 class="badge badge-pill badge-success">成功</h3>
        <%- elsif login_history.status == 0 %>
          <h3 class="badge badge-pill badge-danger">失敗</h3>
        <%- elsif login_history.status == -1 %>
          <h3 class="badge badge-pill badge-warning">ロック</h3>
        <%- end %>
      </td>
      <td><%= login_history.name %></td>
      <td><%= login_history.created_at.strftime('%Y/%m/%d %H:%M') %></td>
      <td><%= login_history.ip_address %></td>
    </tr>
  <%- end -%>
  </tbody>
</table>
