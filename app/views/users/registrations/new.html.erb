<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="container login-form">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card mx-4">
          <div class="card-body p-4">
            <h1>ユーザー登録</h1>
            <p class="text-muted">Create your account</p>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text">@</span>
              </div>
              <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'メールアドレス', class: 'form-control' %>
            </div>

            <div class="input-group mb-3">
              <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i class="fas fa-lock"></i>
                  </span>
              </div>
              <%= f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'パスワード', class: 'form-control' %>
            </div>

            <div class="input-group mb-4">
              <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i class="fas fa-lock"></i>
                  </span>
              </div>
              <input type="password" class="form-control" placeholder="パスワード再入力">
              <%= f.password_field :password, autocomplete: 'off', placeholder: 'パスワード再入力', class: 'form-control' %>
            </div>

            <button type="submit" class="btn btn-block btn-success">登録</button>
          </div>

        </div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
<% end %>

