<div class="row">
  <%%- if flash[:alert] -%>
  <div class="col-sm-8">
    <div class="alert alert-danger">
      <$$= print_flash_alert <%= model_name %>, flash[:alert] $$>
    </div>
  </div>
  <%%- end -%>
  <$$- map_view = false $$>
  <%- model.form_attributes.each_with_index do |column, index| -%>
    <%= ApplicationController::render partial: 'rails/views/_item', locals:{column: column, model: model, var_model: var_model, model_name: model_name} -%>
  <%- end -%>
</div>

<$$- if map_view && <%= model_name %>.edit_mode != :modal $$>
<script src="https://maps.googleapis.com/maps/api/js?key=<$$= Settings.google.api_key $$>"></script>
