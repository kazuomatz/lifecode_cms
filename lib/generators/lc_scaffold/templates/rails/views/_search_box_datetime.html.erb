<$$- if column[:show_time] -$$>
<div class="col-sm-12">
  <div class="row">
    <div class="col-sm-<$$= column[:column] $$>">
      <div class="form-group">
      <label for="<$$= column[:name] $$>"><$$= column[:label] $$></label>
       <div class="input-group mb-3">
          <input type="text" class="form-control _input-date" id="<$$= column[:name] $$>" name="<$$= column[:name] $$>" value="<$$= params[:<%= column[:name] %>] $$>"/>
        </div>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="form-group">
        <label for="<$$= column[:name] $$>"><$$= column[:label] $$></label>
        <div class="input-group mb-3">
          <input type="text" class="form-control _input-time" id="<$$= column[:name] $$>" name="<$$= column[:name] $$>" value="<$$= params[:<%= column[:name] %>] $$>"/>
        </div>
      </div>
    </div>
  </div>
</div>
<$$- else $$>
<div class="col-sm-<$$= column[:column] $$>">
  <div class="form-group">
    <label for="<$$= column[:name] $$>"><$$= column[:label] $$></label>
    <div class="input-group mb-3">
       <div class="input-group mb-3">
          <input type="text" class="form-control _input-date" id="<$$= column[:name] $$>" name="<$$= column[:name] $$>" value="<$$= params[:<%= column[:name] %>] $$>"/>
        </div>
    </div>
  </div>
</div>
<$$- end -$$>